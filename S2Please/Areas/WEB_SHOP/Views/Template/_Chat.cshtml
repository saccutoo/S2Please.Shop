@using S2Please.Helper
@using S2Please.ViewModel
@using SHOP.COMMON
<div class="page-content page-container" id="page-content" style="display:none">
    <div class="padding">
        <div class=" container d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card card-bordered">
                    <div class="card-header">
                        <h4 class="card-title"><strong>@FunctionHelpers.GetValueLanguage("Chat.Chat")</strong></h4> <a class="btn btn-xs btn-secondary" onclick="hideChat()">@FunctionHelpers.GetValueLanguage("Chat.HideChat")</a>
                    </div>
                    <div class="card-body" id="information-chat">
                        <form id="form-information-chat">
                            <input value="@CurrentUser.User.ID" id="messenger-id" name="model.USER_ID" hidden/>
                            <div class="form-group" style=" margin-top: 10px; padding-left: 30px;">
                                @Html.Partial("~/Views/Template/_Input.cshtml", new InputModel() { Type = "text", Id = "MESSENGER-NAME", Class = "input-xlarge", Name = "model.CUSTOMER_NAME", LabelName = "Chat.Name", IsRequied = true, Style = "width: 90%;" })
                            </div>
                            <div class="form-group" style=" margin-top: 10px; padding-left: 30px;">
                                @Html.Partial("~/Views/Template/_Input.cshtml", new InputModel() { Type = "text", Id = "MESSENGER-EMAIL", Class = "input-xlarge", Name = "model.EMAIL", LabelName = "Chat.Email", IsRequied = true, Style = "width: 90%;" })
                            </div>
                            <div class="form-group" style=" margin-top: 10px; padding-left: 30px;">
                                <button type="button" id="start-chat" class="btn btn-inverse">@FunctionHelpers.GetValueLanguage("Button.StartChat")</button>
                            </div>
                        </form>                       
                    </div>
                    <div class="ps-container ps-theme-default ps-active-y" id="chat-content" style="overflow-y: scroll !important; height:400px !important;display:none">
                        @*<div class="media media-chat">
                            <img class="avatar" src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                            <div class="media-body">
