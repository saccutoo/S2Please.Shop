@model S2Please.Areas.ADMIN.ViewModel.PermissionViewModel
@using S2Please.Helper;
@using S2Please.ViewModel;
@using System.Globalization
@using SHOP.COMMON;
@{
    Layout = null;
}
<style>
    ul.checktree-root, ul#tree ul {
        list-style: none;
    }

        ul.checktree-root label {
            font-weight: normal;
            position: relative;
        }
            ul.checktree-root label input {
                position: relative;
                top: 2px;
                left: -5px;
            }
    #form-permission ul{margin-left:30px}
    #form-permission {
        padding-bottom: 20px;
        padding-top: 20px;
    }
    .permission-padding {
        background: white;
    }
    #permission-role {
        padding-left: 85px;
    }
</style>
<div class="row col-md-12 permission-padding" >
    <form id="form-permission">
        <ul id="tree">
            <li>
                <label><input type="checkbox" />Level 1 - 1</label>
            </li>
            <li>
                <label>
                    <input type="checkbox" /> Level 1 - 2
                </label>
                <ul>
                    <li><label><input type="checkbox" />Level 2 - 1</label></li>
                    <li ><label><input type="checkbox" id="li2"/>Level 2 - 2</label></li>
                </ul>
            </li>
        </ul>
    </form>
</div>

<div class="row col-md-12">
    @if (FunctionHelpers.CheckPermission(MenuName.PermissionRole, Permission.Update))
    {
        <button type="button" class="au-btn au-btn-icon au-btn--green au-btn--smally" onclick="saveProductGroup()">@FunctionHelpers.GetValueLanguage("Button.Save")</button>
    }
</div>

<script>
    $('#tree').checktree();
</script>
