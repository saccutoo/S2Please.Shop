<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12"> <h3 class="title-5 m-b-35">Thêm đơn hàng</h3></div>
            <div class="col-md-12">
                <form id="form-order">
                    <div id="accordion">
                        <div class="card">
                            <div class="card-header" id="card-headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        @FunctionHelpers.GetValueLanguage("OrderDetail.Customer");
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne">
                                <div class="card-body">
                                    <div class="row form-group">
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Input.cshtml", new InputModel() { Type = "text", Id = "FULL_NAME", Class = "", Name = "model.FULL_NAME", LabelName = "Cart.FullName", Value = Model.Customer.FULL_NAME, IsRequied = true })
                                        </div>
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Input.cshtml", new InputModel() { Type = "text", Id = "EMAIL", Class = "", Name = "model.EMAIL", LabelName = "OrderDetail.Email", Value = Model.Customer.EMAIL, IsRequied = true, Style = "" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-6">
                                            @*@Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Select.cshtml", new SelectModel() { Id = "PRODUCT_TYPE_ID", Name = "model.PRODUCT_TYPE_ID", Datas = Model.Types, LabelName = "Product.Type", IsRequied = true, Value = Model.Product.PRODUCT_TYPE_ID.ToString(), FieldId = "ID", FieldName = "NAME", IsShowTitle = true })*@
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_InputMask.cshtml", new InputModel() { Type = "text", Id = "PHONE", Class = "", Name = "model.PHONE", LabelName = "OrderDetail.Email", Value = Model.Customer.PHONE, IsRequied = true, Style = "", TypeInputMask = "numeric" })
                                        </div>
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_InputMask.cshtml", new InputModel() { Type = "text", Id = "PHONE", Class = "", Name = "model.FAX", LabelName = "OrderDetail.Fax", Value = Model.Customer.FAX, IsRequied = true, Style = "", TypeInputMask = "numeric" })
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Select.cshtml", new SelectModel() { Id = "CITY", Name = "model.CITY", Datas = Model.Citys, LabelName = "Cart.City", IsRequied = true, Value = Model.Customer.CITY.ToString(), FieldId = "ID", FieldName = "NAME", IsShowTitle = true })
                                        </div>
                                        <div class="col col-md-6">

                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Select.cshtml", new SelectModel() { Id = "DISTRICT", Name = "model.DISTRICT", Datas = new List<dynamic>(), LabelName = "Cart.District", IsRequied = true, Value = Model.Customer.DISTRICT.ToString(), FieldId = "ID", FieldName = "NAME", IsShowTitle = true })
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Select.cshtml", new SelectModel() { Id = "COMMUNITY", Name = "model.COMMUNITY", Datas = new List<dynamic>(), LabelName = "Cart.Community", IsRequied = true, Value = Model.Customer.COMMUNITY.ToString(), FieldId = "ID", FieldName = "NAME", IsShowTitle = true })
                                        </div>
                                        <div class="col col-md-6">
                                            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Input.cshtml", new InputModel() { Type = "text", Id = "ADRESS_SPECIFIC", Class = "", Name = "model.ADRESS_SPECIFIC", LabelName = "Cart.Hamlet", Value = Model.Customer.ADRESS_SPECIFIC, IsRequied = true, Style = "" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="margin:auto">
                        <center>
                            <button type="button" onclick="comeBackOrder()" class="btn btn-primary">
                                @FunctionHelpers.GetValueLanguage("Button.ComeBack")
                            </button>
                            @if (FunctionHelpers.CheckPermission("Order", "Update"))
                            {
                                <button type="button" onclick="saveProduct()" class="btn btn-success">
                                    @FunctionHelpers.GetValueLanguage("Button.Save")
                                </button>
                            }
                        </center>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>