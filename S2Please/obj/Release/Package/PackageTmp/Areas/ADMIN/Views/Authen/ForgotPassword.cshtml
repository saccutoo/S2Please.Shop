@model S2Please.Areas.ADMIN.ViewModel.LoginViewModel
@using S2Please.Helper
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title Page-->
    <title>@FunctionHelpers.GetValueLanguage("Authen.ChangePassword")</title>
    <!-- Fontfaces CSS-->
    <link href="~/LayoutAdmin/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <!-- Bootstrap CSS-->
    <link href="~/LayoutAdmin/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <!-- ~/LayoutAdmin/vendor CSS-->
    <link href="~/LayoutAdmin/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/LayoutAdmin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <!-- Main CSS-->
    <link href="~/LayoutAdmin/css/theme.css" rel="stylesheet" media="all">
    <style>
        .requied{
            color:red;
        }
    </style>
</head>
<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/LayoutAdmin/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            @if (Model.Is_Expired)
                            {
                                <form>
                                    <section >
                                        <p>@FunctionHelpers.GetValueLanguage("Email.IsExpired")</p><br />
                                        <a href="/admin/send-request">@FunctionHelpers.GetValueLanguage("Authen.ForgottenPassword")</a>
                                    </section>
                                </form>
                              
                            }
                            else
                            {
                                <form action="@Url.Action("ForgotPassword","Authen",new { area = "ADMIN" })" method="post">
                                    @if (Model.Success && Model.Is_ChangePass)
                                    {
                                        <div class="form-group">
                                            <section>
                                                <div class="alert alert-success alert-dismissible in">
                                                    <a href="/admin/login" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                    <strong>@FunctionHelpers.GetValueLanguage("Message.Success")!</strong> @Model.Message
                                                </div>
                                                <div>
                                                    <a href="/admin/login">@FunctionHelpers.GetValueLanguage("Authen.SignIntoYourAccount")</a>
                                                </div>
                                            </section>
                                        </div>
                                    }
                                    else
                                    {
                                        if (!Model.Success && Model.Is_ChangePass)
                                        {
                                            <div class="form-group">
                                                <section>
                                                    <div class="alert alert-danger alert-dismissible in">
                                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                        <strong>@FunctionHelpers.GetValueLanguage("Message.Error")!</strong> @Model.Message
                                                    </div>
                                                </section>
                                            </div>
                                        }
                                        <input name="EMAIL" value="@Model.Email" hidden/>
                                        <input name="CODE" value="@Model.Code" hidden />

                                        <div class="form-group">
                                            <label>@FunctionHelpers.GetValueLanguage("Authen.Password") <span class="requied">*</span></label>
                                            <input class="au-input au-input--full" type="password" name="PASS_WORD" placeholder="@FunctionHelpers.GetValueLanguage("Authen.EnterPassWord")">
                                            @if (Model != null && Model.IS_Error_Password_Required)
                                            {
                                                <span class="requied">@FunctionHelpers.GetValueLanguage("Error.Required")</span>  
                                            }                                          
                                        </div>

                                        <div class="form-group">
                                            <label>@FunctionHelpers.GetValueLanguage("Authen.EnterAgainPassword") <span class="requied">*</span></label>
                                            <input class="au-input au-input--full" type="password" name="PASS_WORD_AGAIN" placeholder="@FunctionHelpers.GetValueLanguage("Authen.EnterAgainPassword")">
                                            @if (Model != null && Model.IS_Error_Password_Required_Again)
                                            {
                                                <span class="requied">@FunctionHelpers.GetValueLanguage("Error.Required")</span>
                                            }
                                            @if (Model != null && Model.IS_Error_Password_Not_Match_Again)
                                            {
                                                <label class="requied">@FunctionHelpers.GetValueLanguage("Authen.Message.PasswordDoesNotMatch") </label>
                                            }
                                        </div>
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">@FunctionHelpers.GetValueLanguage("Authen.Send")</button>
                                    }


                                </form>
                            }
                                                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/LayoutAdmin/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/LayoutAdmin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/LayoutAdmin/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- ~/LayoutAdmin/vendor JS       -->
    <script src="~/LayoutAdmin/vendor/slick/slick.min.js">
    </script>
    <script src="~/LayoutAdmin/vendor/wow/wow.min.js"></script>
    <script src="~/LayoutAdmin/vendor/animsition/animsition.min.js"></script>
    <script src="~/LayoutAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/LayoutAdmin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/LayoutAdmin/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/LayoutAdmin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/LayoutAdmin/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/LayoutAdmin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/LayoutAdmin/vendor/select2/select2.min.js">
    </script>
    <!-- Main JS-->
    <script src="~/LayoutAdmin/js/main.js"></script>
</body>
</html>
<!-- end document-->

