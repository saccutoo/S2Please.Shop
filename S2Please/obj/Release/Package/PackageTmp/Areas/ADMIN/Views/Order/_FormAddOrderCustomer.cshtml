@model S2Please.Models.BaseModel
@using S2Please.Helper;
@using S2Please.ViewModel;
@{
    Layout = null;
}
<style>
    .modal-body{
        padding:20px;
    }
</style>
<div class="modal-header">
    <h5 class="modal-title">@FunctionHelpers.GetValueLanguage("OrderDetail.OrderDetail").ToUpper()</h5>
    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>*@
</div>
<div class="modal-body">
    <div class="row form-group">
        <div class="col col-md-6">
            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Input.cshtml", new InputModel() { Type = "text", Id = "NAME", Class = "", Name = "model.NAME", LabelName = "Product.ProductName", Value ="", IsRequied = true })
        </div>
        <div class="col col-md-6">
            @Html.Partial("~/Areas/ADMIN/Views/Template/Form/_Textarea.cshtml", new InputModel() { Type = "text", Id = "DECRIPTION", Class = "", Name = "model.DECRIPTION", LabelName = "Product.Decription", Value = "", Style = "height:38px;" })
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" title="@FunctionHelpers.GetValueLanguage("Button.Title.Close")" class="btn btn-secondary" data-dismiss="modal">@FunctionHelpers.GetValueLanguage("Button.Title.Close")</button>
</div>